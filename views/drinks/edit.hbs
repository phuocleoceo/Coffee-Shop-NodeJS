<div class="mt-4 create-page create">
    <h3>Sửa đồ uống</h3>
    <br>
    <form method="POST" action="?_method=PUT">
        <div class="form-group">
            <label for="name">Tên :</label>
            <input type="text" name="name" class="form-control" value="{{drinks.name}}" id="name-input">
        </div>
        <div class="form-group">
            <label for="price">Giá :</label>
            <input type="text" name="price" class="form-control" value="{{drinks.price}}" id="price-input">
        </div>
        <div class="form-group">
            <label for="img">Ảnh :</label>
            <input type="text" name="img" class="form-control" value="{{drinks.img}}" id="img-input">
        </div>
        <div class="form-group">
            <label for="description">Mô tả : </label>
            <input type="text" name="description" class="form-control" value="{{drinks.description}}" id="description-input">
        </div>
        <div class="form-group">
            <label for="videoID">Video ID : </label>
            <input type="text" name="videoID" class="form-control" value="{{drinks.videoID}}" id="videoID-input">
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-lg create-button">Cập nhật sửa</button>
        <br><br>
    </form>
</div>